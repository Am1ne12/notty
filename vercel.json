{
  "version": 2,
  "buildCommand": "cd client && npm install --include=dev && npm run build",
  "installCommand": "cd api && npm install",
  "outputDirectory": "client/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
